<!-- custom_text_field_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="@color/grey" /> <!-- Background color -->
    <corners android:radius="0dp" /> <!-- Corner radius -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="10dp"
        android:bottom="2dp" /> <!-- Padding for depth effect -->
    <stroke
        android:color="@color/grey" /> <!-- Border color -->
</shape>
