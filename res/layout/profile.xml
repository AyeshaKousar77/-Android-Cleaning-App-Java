<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tr"
    tools:context=".ui.you.YouFragment">

    <ImageView
        android:layout_width="122dp"
        android:layout_height="111dp"
        android:src="@drawable/baseline_person_24"
        android:layout_marginBottom="95dp"
        app:layout_constraintBottom_toTopOf="@+id/text_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>
    <TextView
        android:id="@+id/text_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Add TextInputLayout and TextInputEditText for First Name, Last Name, Phone, Email, Location -->
<TextView
    android:id="@+id/vieW1"
    android:layout_width="280dp"
    android:layout_height="45dp"
    android:layout_marginTop="5dp"
    android:textColor="@color/purple"
    android:textSize="18sp"/>
        <TextView
            android:id="@+id/vieW2"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/purple"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/vieW3"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/purple"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/vieW4"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/purple"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/vieW5"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/purple"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/loci"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/purple"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/vieW6"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/purple"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/vieW7"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/purple"
            android:textSize="18sp"/>
        <!-- Bank Name Spinner -->


        <!-- Add TextInputLayout and TextInputEditText for Account No -->
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:inputType="text"
            app:boxBackgroundMode="outline"
            android:layout_marginTop="3dp"
            app:counterEnabled="true"
            app:counterMaxLength="50"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ttt1"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:inputType="text"
                android:textColor="@color/purple"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:inputType="text"
            app:boxBackgroundMode="outline"
            app:counterEnabled="true"
            android:layout_marginTop="3dp"
            app:counterMaxLength="50"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ttt2"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:inputType="text"
                android:layout_marginTop="3dp"
                android:textColor="@color/purple"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="280dp"
            android:layout_height="45dp"
            app:boxBackgroundMode="outline"
            android:layout_marginTop="3dp"
            app:counterEnabled="true"
            app:counterMaxLength="50"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ttt3"
                android:layout_marginTop="3dp"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:inputType="number"
                android:textColor="@color/purple"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="280dp"
            android:layout_height="45dp"
            app:boxBackgroundMode="outline"
            android:layout_marginTop="3dp"
            app:counterEnabled="true"
            app:counterMaxLength="50"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ttt4"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_marginTop="3dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/purple"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="280dp"
            android:layout_height="45dp"
            app:boxBackgroundMode="outline"
            app:counterEnabled="true"
            android:layout_marginTop="3dp"
            app:counterMaxLength="50"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ttt5"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_marginTop="3dp"
                android:inputType="textWebPassword"
                android:textColor="@color/purple"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="280dp"
            android:layout_height="45dp"
            app:boxBackgroundMode="outline"
            app:counterEnabled="true"
            android:layout_marginTop="3dp"
            app:counterMaxLength="50"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/loc"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_marginTop="3dp"
                android:inputType="textWebPassword"
                android:textColor="@color/purple"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutBankName"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="3dp"
            android:hint="@string/Bank"
            app:boxBackgroundMode="outline"
            app:counterEnabled="true"
            app:counterMaxLength="50">

            <Spinner
                android:id="@+id/bankNameSpinner"
                android:layout_width="280dp"
                android:layout_height="45dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="280dp"
            android:layout_height="45dp"
            app:boxBackgroundMode="outline"
            app:counterEnabled="true"
            android:layout_marginTop="3dp"
            app:counterMaxLength="50"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ttt7"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:inputType="number"
                android:textColor="@color/purple"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Edit Button -->
        <Button
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@id/editButton"
            android:layout_marginTop="5dp"
            android:text="Edit" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>